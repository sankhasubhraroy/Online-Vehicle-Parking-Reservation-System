<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<script src="https://kit.fontawesome.com/9f5e9c7e33.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="/style/footer.css">
	<link rel="stylesheet" href="/style/navbar.css">
	<link rel="stylesheet" href="/style/contact.css">
	<title>Contact</title>
</head>

<body>

	{{>navbar}}

	<section class="main-container">
		<div class="container">
			<div class="row">
				<div class="contact-box">
					<h1>Send us a message</h1>
					<form action="/auth/contact" id="contactForm" name="contactForm" method="POST">
						<div class="form-group name-group">
							<input type="text" class="form-control" name="name" id="name" placeholder="Name">
						</div>
						<div class="form-group email-group">
							<input type="email" class="form-control" name="email" id="email" placeholder="Email">
						</div>
						<div class="form-group">
							<input type="text" class="form-control" name="subject" id="subject" placeholder="Subject">
						</div>
						<div class="form-group">
							<textarea name="message" class="form-control" id="message" cols="30" rows="7"
								placeholder="Message"></textarea>
						</div>
						<button class="submit-btn">Send Message</button>
					</form>
				</div>

				<div class="info-box">
					<h3>Contact information</h3>
					<div class="info-group">
						<p>
							<i class="fa fa-envelope"></i>
							<a href="mailto:sankha.roy.dev@gmail.com">Email us</a>
						</p>
					</div>
					<div class="info-group">
						<p>
							<i class="fa fa-phone"></i>
							<a href="tel:8617456147">Call us</a>
						</p>
					</div>
					<div class="info-group">
						<p>
							<i class="fa fa-globe"></i>
							<a href="http://sankhasubhraroy.me">Our website</a>
						</p>
					</div>
					<div class="info-group">
						<p>
							<i class="fa-solid fa-location-dot"></i>
							<a href="https://goo.gl/maps/BxSBQjYfSTjtnffe9">Address</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	{{>footer}}

	<script src="/script/navbar.js"></script>

</body>

</html>